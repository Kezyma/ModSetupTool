<Window x:Class="ModSetup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
        xmlns:local="clr-namespace:ModSetup"
        mc:Ignorable="d"
        Title="Mod Setup Tool" Height="360" Width="640">
    <Grid Margin="0,0,0,0">
        <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="48"></RowDefinition>
            </Grid.RowDefinitions>
            <mdxam:MarkdownScrollViewer x:Name="StepMarkdownView" Margin="10,5,0,5" Grid.Row="0" Grid.ColumnSpan="5"/>
            <Button x:Name="SkipButton" Grid.Column="0" Grid.Row="1" Margin="5" FontSize="16">Skip</Button>
            <Button x:Name="ContinueButton" Grid.Column="4" Grid.Row="1" Margin="5" FontSize="16">Continue</Button>
            <Button x:Name="YesButton" Grid.Column="4" Grid.Row="1" Margin="5" FontSize="16">Yes</Button>
            <Button x:Name="NoButton" Grid.Column="3" Grid.Row="1" Margin="5" FontSize="16">No</Button>
        </Grid>
    </Grid>
</Window>
